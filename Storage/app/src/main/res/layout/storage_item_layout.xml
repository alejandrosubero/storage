<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:translationZ="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/darker_gray"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:visibility="visible"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp">
                <TextView
                    android:id="@+id/cardItemNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/cardItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="14dp"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp">
                <TextView
                    android:id="@+id/cardItemTypeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/cardItemType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="type"
                    android:textSize="14dp"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp">
                <TextView
                    android:id="@+id/cardItemUseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use:"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/cardItemUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use"
                    android:textSize="14dp"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cardStoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:id="@+id/cardStoreAreaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area:"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/cardStoreArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="area"
                        android:textSize="14dp"
                        android:textStyle="italic"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:id="@+id/cardStoreTypeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type:"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/cardStoreType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="type"
                        android:textSize="14dp"
                        android:textStyle="italic"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp">
                    <TextView
                        android:id="@+id/cardStoreSecctionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Espace:"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/cardStoreSecction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="secction"
                        android:textSize="14dp"
                        android:textStyle="italic" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>