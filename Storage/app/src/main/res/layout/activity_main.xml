<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8DF5A01"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/home"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUnit"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="82dp"
                tools:layout_editor_absoluteY="408dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/unitImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/ic_baseline_smart_button_24" />

                    <TextView
                        android:id="@+id/unitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="unit unthefind"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSearch"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:translationZ="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="82dp"
                tools:layout_editor_absoluteY="408dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/searchTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/earch" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardlist"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:translationZ="10dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="399dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/listTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/list1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAdd"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:translationZ="10dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="549dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/addTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/add2" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBackup"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:translationZ="10dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="556dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageBackup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/backup_icon_from" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>

